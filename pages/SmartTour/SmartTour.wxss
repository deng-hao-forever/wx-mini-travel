/* pages/SmartTour/SmartTour.wxss */
.map{
  width: 100vw;
  height: 100vh;
}
.info{
  width: 100vw;
  height: 50vh;
  position: absolute;
  top: 50vh;
  bottom: 0;
  z-index: 99;
  background-color: white;
  border-top-left-radius: 45rpx;
  border-top-right-radius: 45rpx;
}
.body{
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
}
.s-info{
  width: 100vw;
  min-height: 50vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  height: 8vh;
  line-height: 8vh;
}
image{
  max-width: 60vw;
  max-height: 40vw;
  margin-bottom: 5vh;
}
.content{
  width: 80vw;
  min-width: 10vh;
  line-height: 4vh;
}