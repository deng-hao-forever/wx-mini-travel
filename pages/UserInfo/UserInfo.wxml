<!--pages/UserInfo/UserInfo.wxml-->
<view class="content">
  <view class="image">
    <text>头像</text>
    <view class="box">
    <image class="userInage" bindtap="chooseImage" src="{{image}}" />
  </view>
  </view>
  <view class="nickname">
    <text>昵称</text>
    <text wx:if="{{userNickNameChange}}" bindtap="userNickNameChange">{{userNickName}}</text>
    <input bindblur="userNickNameChange" adjust-position="false" bindconfirm="submituserNickNameChangeResult" focus="true" class="input" wx:if="{{!userNickNameChange}}" type="text" value="{{userNickName}}"/>
  </view>
  <view class="phone">
    <text>手机号</text>
    <text wx:if="{{UserPhoneChange}}" bindtap="UserPhoneChange">{{UserPhone}}</text>
    <input bindblur="userNickNameChange" adjust-position="false" bindconfirm="submitUserPhoneChangeResult" focus="true" class="input" wx:if="{{!UserPhoneChange}}" type="text" value="{{UserPhone}}"/>
  </view>
  <view class="age">
    <text>年龄</text>
    <text wx:if="{{userAgeChange}}" bindtap="userAgeChange">{{userAge}}岁</text>
    <input bindblur="userAgeChange" adjust-position="false" bindconfirm="submituserAgeChangeResult" focus="true" class="input" wx:if="{{!userAgeChange}}" type="number" value="{{userAge}}"/>
  </view>
  <view class="wegit">
    <text>体重</text>
    <text wx:if="{{userWeightChange}}" bindtap="userWeightChange">{{userWeight}}KG</text>
    <input bindblur="userWeightChange" adjust-position="false" bindconfirm="submituserWeightChangeResult" focus="true" class="input" wx:if="{{!userWeightChange}}" type="number" value="{{userWeight}}"/>
  </view>
  <view class="height">
    <text>身高</text>
    <text wx:if="{{userHeightChange}}" bindtap="userHeightChange">{{userHeight}}cm</text>
    <input bindblur="userHeightChange" adjust-position="false" bindconfirm="submitResult" focus="true" class="input" wx:if="{{!userHeightChange}}" type="number" value="{{userHeight}}"/>
  </view>
</view>
