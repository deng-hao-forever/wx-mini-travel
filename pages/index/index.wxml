<view class="body">
	<view class="banner">
		<swiper class='bannerSwiper' previous-margin="54rpx" next-margin='54rpx' indicator-dots="true"
			indicator-color='#B5B5B5' indicator-active-color='#fff' interval='2000' duration='1000'
			bindchange='onChange' circular='true' autoplay="true">
			<block wx:for="{{banners}}" wx:key="{{index}}">
				<swiper-item>
					<view class="img_box">
						<image class="{{index==xindex?'imageBanner':'imageBanner_small'}}" mode="aspectFill"
							src="{{item.cover_img}}" id='{{item.id}}' bindtap='imageClick'></image>
					</view>
				</swiper-item>
			</block>
		</swiper>
	</view>
