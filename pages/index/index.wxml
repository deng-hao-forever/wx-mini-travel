	<view class="footer">
		<view class="">
			<text class="footer-title" space="ensp">{{footer}}</text>
		</view>
		<view class="box">
			<view wx:for="{{RepresentativeAttractions}}" wx:key="{{RepresentativeAttraction.id}}"
				wx:for-item="RepresentativeAttraction">
				<view class="item" bindtap="gotoattractioninfo" data-id="{{RepresentativeAttraction.id}}">
					<view class="left-item">
						<image src="{{RepresentativeAttraction.cover_img}}" mode="aspectFill"></image>
					</view>
					<view class="right-item">
						<view class="right-item-title">
							<text class="attraction-title">{{RepresentativeAttraction.attention_name}}</text>
							<image src="../Image/fire.png" />
							<view class="attraction-title1">{{RepresentativeAttraction.count}}</view>
						</view>
						<text class="attraction-info"></text>
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="m-box {{!initShow?'m-box-show':''}}">
	<view class="nav" wx:if="{{initShow}}">
		<view class="intro" bindtap="goIntro">
			简介
		</view>
		<view class="intro" bindtap="goWay">
			路线
		</view>
	</view>
		<view class="m-img_box" bindtap="tapAdd">
			<image src="../../assets/img/1.png" mode="aspectFill"></image>
		</view>
	</view>
