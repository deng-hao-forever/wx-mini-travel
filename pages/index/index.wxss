.banner{
  
}
.imageBanner {
  width: 100%;
  height: 100%;
  animation-name: add;
  animation-duration: 1s;
border-radius: 8rpx;
  position: absolute;
  bottom: 0;
}
.imageBanner_small {
  width: 94%;
  height: 94%;
  animation-name: sub;
  animation-duration: 1s;
  margin-left: 20rpx;
  margin-right: 20rpx;
  position: absolute;
  bottom: 0;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx; 
}

@keyframes add {
  from {height: 94%;}
  to {height: 100%;}
}
@keyframes sub {
  from {height: 100%;}
  to {height: 94%;}
}
