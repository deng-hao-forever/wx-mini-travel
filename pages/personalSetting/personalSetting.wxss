/* pages/personalSetting/personalSetting.wxss */
.body{
  display: block;
  width: 100vw;
  height: 100vh;
  background-color: rgb(245, 245, 245);
}
.top{
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 200rpx;
  background-color: rgb(255, 255, 255);
}
.userImage{
  margin: 50rpx;
  background: rgb(238, 238, 1);
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userName{
  margin-top: 50rpx;
  font-size: 40rpx;
  max-width: 30vw;
  overflow: hidden;
  display: -webkit-box;
  line-height: 6vw;
  font-weight: 500;
}
.userInfo{
  margin-top: 10rpx; 
  font-size: 25rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.setting{
  margin: 0;
  padding: 0;
  margin-top: 5rpx;
}
.setting-item:first-child{
  border-top: 1rpx solid rgba(219, 216, 221, 0.795);
}
.setting-item{
  height: 100rpx;
  display: flex;
  justify-items: row;
  border-bottom: 1rpx solid rgba(219, 216, 221, 0.795);
}
.setting-item:hover{
  height: 110rpx;
  display: flex;
  justify-items: row;
  border-bottom: 1rpx solid rgba(219, 216, 221, 0.795);
  background-color: rgba(194, 192, 192, 0.795);
}
.left{
  height: 50rpx;
  width: 50rpx;
  margin: 20rpx;
  margin-top: 30rpx;
}
.setting-item text{
  width: 250rpx;
  margin-top: 29rpx;
}
.right{
  margin-left: 300rpx;
  display: block;
  height: 50rpx;
  width: 50rpx;
  margin-top: 30rpx;
}
.setting-one{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: rgb(255, 255, 255);
}
.setting-two{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: rgb(255, 255, 255);
}
.Btn{
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 25vh;
  width: 100%;
  height: 100rpx;
}
.btn{
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid red;
  color: red;
  text-align: center;
  border-radius: 8rpx; 
}
