.main {
	position: relative;
	padding-bottom: 88rpx;
	width: 100vw;
}

.box {
	text-align: center;
}

.bottom{
	padding: 0 24rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
	box-shadow: 0 -10rpx 32px rgba(0,0,0,0.1);
	box-sizing: border-box;
	z-index: 1000;
}

.m-ipt{
	padding: 8rpx 24rpx;
	box-sizing: border-box;
	width: 400rpx;
	height: 66rpx;
	border: 2rpx solid #333;
	border-radius: 88rpx;
}
.m-ipt input{
	width: 100%;
	height: 100%;
	
}
.like{
	display: flex;
	align-items: center;
	
}

.like image{
	margin-right: 8rpx;
	width: 48rpx;
	height: 48rpx;
}
.m-like{
	margin-right: 24rpx;
	display: flex;
	align-items: center;
	color: #333;
}

.promt{
	
}

.black{
	position: fixed;
	top: 0;
	left: 0;
	width: 750rpx;
	height: 100vh;
	background: rgba(0, 0, 0, 0.5);
	z-index: 998;
}

.container{
	padding: 24rpx 24rpx 80rpx;
	position: fixed;
	bottom: -100%;
	left: 0;
	width: 100%;
	max-height: 750rpx;
	background: #fff;
	border-top-right-radius: 8rpx;
	border-top-left-radius: 8rpx;
	box-sizing: border-box;
	z-index: 999;
	white-space: inherit;
	overflow: scroll;
	transition: all .3s ease-in-out;
}

.item{
	display: flex;
	align-items: center;
	padding: 32rpx 0;
	width: 100%;
	border-bottom: 2rpx solid #f5f5f5;
}

.item .avatar {
	margin-right: 10rpx;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
}

.item .avatar image{
	width: 100%;
	height: 100%;
}

.content{
	width: 400rpx;
}
.top{
	display: flex;
}

.name{
	margin-right: 10rpx;
}

.active{
	bottom: 0;
}

